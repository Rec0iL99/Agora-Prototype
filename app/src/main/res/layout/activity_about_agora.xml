<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/white"
    tools:context=".navItems.AboutAgora">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/about_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/about_logo_text_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_agora_content_one"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_logo" />

            <TextView
                android:id="@+id/about_logo_text_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_agora_content_two"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_logo_text_one" />

            <TextView
                android:id="@+id/about_version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version"
                android:textColor="@color/agoraSecondaryText"
                android:textSize="12sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_logo_text_two" />

            <TextView
                android:id="@+id/about_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_count"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_version_text" />

            <TextView
                android:id="@+id/about_connect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect_with_us"
                android:textColor="@color/agoraSecondaryText"
                android:textSize="12sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_version" />

            <Button
                android:id="@+id/bt_about_twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/twitter"
                android:background="@color/white"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="2dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/twitter_logo"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_connect_text"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/bt_about_gitlab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gitlab"
                android:drawableLeft="@drawable/gitlab_logo"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_about_twitter"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/bt_about_gitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gitter"
                android:drawableLeft="@drawable/gitter_logo"
                android:drawablePadding="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_about_gitlab"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/bt_about_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aossie"
                android:drawableLeft="@drawable/website"
                android:drawablePadding="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_about_gitter"
                style="?android:attr/borderlessButtonStyle" />

            <TextView
                android:id="@+id/develop_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/developed_with_love"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_about_website"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>